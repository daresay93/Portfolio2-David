---
import Header from "../components/Header.astro";
import "@fontsource-variable/montserrat";
import 'animate.css';

interface Props {
  title: string;
  description: string;
}

const { description, title } = Astro.props;
---

<!doctype html>
<html lang="es">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content={description} />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />

    <title>{title}</title>
  </head>
  <body class="absolute inset-0 -z-10 h-full w-full bg-gray-200  bg-[linear-gradient(to_right,#f0f0f0_1px,transparent_1px),linear-gradient(to_bottom,#f0f0f0_1px,transparent_1px)] bg-[size:6rem_4rem]">
    
    <Header />
    <slot />
  </body>

</html>

<style is:global>
  :root {
    color-scheme: light dark;
  }

  html {
    font-family: "Montserrat Variable", system-ui, sans-serif;
    scroll-behavior: smooth;
  }

  
  
</style>

