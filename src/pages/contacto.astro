---
import Layout from "../layouts/Layout.astro";
---

<Layout
  title="Portfolio de David - Desarrollador y Programador Web principiante"
  description="Desarrollador Web principiante que ha participado en proyecto emprego Appventurers">
  <section class="flex flex-col items-center justify-center">
    <div class="bg-white p-8 rounded-md shadow-md max-w-md w-full mt-8">
      <h2 class="text-2xl font-semibold mb-6 animate__animated animate__jello">
        Contacto
      </h2>
      <form action="procesar_formulario.php" method="POST">
        <div class="mb-4">
          <label for="nombre" class="block text-gray-600">Nombre:</label>
          <input
            type="text"
            id="nombre"
            name="nombre"
            class="w-full p-2 border border-gray-300 rounded-md"
            placeholder="Ej: David Ares.."
            required
          />
        </div>
        <div class="mb-4">
          <label for="email" class="block text-gray-600"
            >Correo electrónico:</label
          >
          <input
            type="email"
            id="email"
            name="email"
            class="w-full p-2 border border-gray-300 rounded-md"
            placeholder="Ej: daresay.appventurers@gmail.com"
            required
          />
        </div>
        <div class="mb-6">
          <label for="mensaje" class="block text-gray-600">Mensaje:</label>
          <textarea
            id="mensaje"
            name="mensaje"
            rows="4"
            class="w-full p-2 border border-gray-300 rounded-md"
            placeholder="Escriba aquí su consulta.."
            required></textarea>
        </div>
        <div>
          <button
            type="submit"
            class="bg-blue-500 text-white py-2 px-4 rounded-md hover:bg-blue-600"
            >Enviar</button
          >
        </div>
      </form>
    </div>
  </section>
</Layout>
